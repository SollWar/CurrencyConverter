<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/currency_from_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:text="RUB"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currency_to_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="@+id/currency_from_text_view"
        app:layout_constraintTop_toBottomOf="@+id/currency_from_text_view"
        tools:text="USD" />

    <EditText
        android:id="@+id/currency_from_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:inputType="numberDecimal"
        android:textAlignment="textEnd"
        android:textSize="32sp"
        android:maxLength="12"
        app:layout_constraintBottom_toBottomOf="@+id/currency_from_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/currency_from_text_view"
        app:layout_constraintTop_toTopOf="@+id/currency_from_text_view"
        tools:text="5000" />

    <TextView
        android:id="@+id/currency_to_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:textAlignment="textEnd"
        android:textSize="32sp"
        android:maxLength="12"
        app:layout_constraintBottom_toBottomOf="@+id/currency_to_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/currency_to_text_view"
        app:layout_constraintTop_toBottomOf="@+id/currency_from_text_view"
        tools:text="5000" />





</androidx.constraintlayout.widget.ConstraintLayout>